<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user_followings_path(user.id) do %><%= user.followings.count %><%end%></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user_followers_path(user.id) do %><%= user.followers.count %><%end%></th>
  </tr>
</table>
  <% if user == current_user %>
  <%else%>
  <% if current_user.following?(user) %>
　  <div><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-success" %></div>
　  <div></div>
　<%else%>
　  <div><%= link_to "フォローする", user_relationships_path(user.id), method: :post , class:"btn btn-success" %></div>
　  <div></div>
　<%end%>
　<%end%>
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>