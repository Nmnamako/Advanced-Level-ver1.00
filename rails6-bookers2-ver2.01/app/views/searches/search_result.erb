<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-8 offset-md-1">
      <%= render 'search' %>
    </div>
  </div>
</div>

<h2>Books search for "<%= @word %>"</h2>
  <!--検索対象User-->
  <% if @range == "User" %>
    <table class="table table-hover table-inverse">
      <tr>
        <td>image</td>
        <td>name</td>
        <td></td>
        <td></td>
      </tr>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
            <td><%= user.name %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  <%else%>
  <!--検索対象Book-->
  <table class="table table-hover table-inverse">
    <tr>
      <td></td>
      <td>Title</td>
      <td>Opinion</td>
      <td></td>
    </tr>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to book_path(book.id) do %><%= book.title %><%end%></td>
        <td><%= book.body %></td>
      </tr>
      <%end%>
    </tbody>
  <%end%>
  </table>